<div class="row">
  <section class="col-md-8">
    <%= render partial: 'projects/partials/show_tabs' %>

    <section class='main'>
      <%= render partial: 'projects/partials/owner_buttons', locals: {project: @project, user: @user} %>

      <%= render partial: 'projects/partials/basic_info', locals: {project: @project} %>

      <div class="panel panel-primary">
        <div class="panel-heading">
          <h5 class="panel-title">Description</h5>
        </div>
        <div class="panel-body">
          <p><%= @project.description %></p>
        </div>
      </div>

      <%= render partial: 'projects/partials/extra_info', locals: {project: @project, video: @video} %>
    </section>

    <section class="blog">
      <%= render partial: 'projects/partials/blog', locals: {project: @project} %>
    </section> 

    <section class="investors">
      <%= render partial: 'projects/partials/investors', locals: {project: @project} %>
    </section>
    
  </section>

  <section class="sidebar well panel panel-primary col-md-4">
    <div class="panel-heading side-title">
      <h4 class="panel-title"><%= @project.name %></h4>
    </div>
    <section class="side-info">
      <%= render partial: 'projects/partials/timer', locals: {project: @project} %>
      <div class="money-info">
        <%= render partial: 'projects/partials/goal_remaining', locals: {project: @project} %>
      </div>
    </section>
    <div class="progress-wrap">
      <%= render partial: 'projects/partials/progress_bar', locals: {project: @project} %>
    </div>
    <%= render partial: 'projects/partials/donations', locals: {project: @project} %>
    <%= render partial: 'projects/partials/map' %>
  </section>
</div>
<script>
  <%= render partial: 'projects/js/timer', formats: [:js], locals: {project: @project} %>
  <%= render partial: 'projects/js/gmaps', formats: [:js] %>
  <%= render partial: 'projects/js/show_tabs', formats: [:js] %>
  <%= render partial: 'projects/js/followers', formats: [:js] %>
</script>