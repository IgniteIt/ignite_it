<% if project.was_paid?(current_user) %>
  You have paid
<% elsif project.is_payable_by(current_user) %>
  <%= button_to 'Pay', new_project_charge_path(project), method: :get, class: 'btn btn-success donate_btn' %>
<% elsif project.has_expired? %>
  Project expired!
<% else %>
  <%= button_to 'Donate', new_project_donation_path(project), method: :get, class: 'btn btn-success donate_btn' %>
<% end %>