<%= link_to 'Add a project', new_project_path %>

<%= render partial: 'projects/partials/search' %>

<%= render partial: 'projects/partials/search_sector' %>

<% if @projects.any? %>

  <% @projects.each do |project| %>
  <%= render partial: 'projects/partials/basic_info', locals: {project:project} %>
    <section class="followers_count">
      <%= pluralize(project.followers.count, 'follower') %>
      <% if user_signed_in? %>
        <% if project.has_been_followed?(current_user) %>
          <%= link_to "Unfollow", project_follower_path(project, project.followed_by(current_user).first), method: :delete %>
        <% else %>
          <%= link_to "Follow", new_project_follower_path(project) %>
        <% end %>
      <% end %>
    </section>
      <script>
        <%= render partial: 'projects/js/timer', formats: [:js], locals: {project: project} %>
      </script>
  <% end %>
<%= paginate @projects %>
<% else %>

  <h3>No projects found!</h3>
<% end %>
