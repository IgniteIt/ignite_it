$(document).ready(function(){

  var tab = $("#tab").val() || 1

  if (tab == '4') {
    loadSearchTab()
  } else if (tab == '3') {
    loadDonatedTab()
  } else if (tab == '2') {
    loadNearMeTab()
  } else {
    loadProjectsTab()
  } 

})

function loadProjectsTab() {
  $("#main").html("<%= escape_javascript render(partial: 'project', locals: {projects: @projects}) %>");
  $('#paginator').html("<%= j(paginate(@projects, :remote => true, :param_name => 'p_page').to_s) %>");
}
