<% if projects.any? %>

  <% projects.each do |project| %>


  <section class="well">

    <div class="row">
      <div class="col-md-3">
        <%= render partial: 'projects/partials/pic', locals: {project: project} %>
      </div>
      <div class="col-md-8">
        <%= render partial: 'projects/partials/index_info', locals: {project: project} %>
      </div>
      <div class="col-md-1">
        <section class="followers-index">
          <span class="badge badge-notify followers_count"> <%= project.followers.count %> </span>
          <%= render partial: 'projects/partials/followers', locals: {project: project} %>
        </section>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <strong>Sector: </strong> <br> 
        <%= project.sector %>
      </div>
      <div class="col-md-3">
        <strong>Goal: Â£<%= project.goal %></strong>
      </div>
      <div class="col-md-3">
        <strong> Project expires in: </strong> 
      </div>
      <strong class="col-md-3">
        <%= render partial: 'projects/partials/timer', locals: {project: project} %>
      </strong>
    </div>

    <div class="row" style="margin-bottom: -15px">
      <div class="col-md-3">
        <strong>Location: </strong> <br> 
        <% text = project.address %>
        <%= truncate(text, length: 30, separator: ' ') %>
      </div>
      <div class="col-md-9" style="padding-top: 20px">
        <%= render partial: 'projects/partials/progress_bar', locals: {project: project} %>
      </div>
    </div>

  </section>








    <script>
      <%= render partial: 'projects/js/timer', formats: [:js], locals: {project: project} %>
    </script>

  <% end %>

<% else %>

  <h3>No projects found.</h3>

<% end %>